---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Adam Lui">
  <!-- Top Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-gray-800 shadow-lg">
    <div class="flex items-center justify-between px-6 h-16">
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <img src="/images/avatar.jpg" alt="Adam Lui" class="w-10 h-10 rounded-full border-2 border-blue-500" />
        <div>
          <h1 class="font-bold leading-tight">Adam Lui</h1>
          <p class="text-gray-400 text-xs">Software Engineer</p>
        </div>
      </div>

      <!-- Desktop Nav Links -->
      <ul class="hidden lg:flex items-center space-x-1">
        <li>
          <a href="#top" class="flex items-center space-x-2 px-4 py-2 rounded hover:bg-gray-700 transition">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
            </svg>
